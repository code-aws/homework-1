import json

def lambda_handler(event, context):
    # Create a structured response similar to the botResponse format
    response_message = "API connection successful!"
    
    botResponse = [{
        'type': 'unstructured',
        'unstructured': {
            'text': response_message
        }
    }]
    
    return {
        'statusCode': 200,
        'body': json.dumps({
            'messages': botResponse
        }),
        'headers': {
            'Content-Type': 'application/json',
            'Access-Control-Allow-Origin': '*',
            'Access-Control-Allow-Methods': 'OPTIONS,POST,GET',
        }
    }
